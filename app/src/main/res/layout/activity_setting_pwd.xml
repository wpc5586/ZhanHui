<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1eef1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <RelativeLayout
            android:id="@+id/rlPhone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/drawer_list_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="手机号"
                android:textColor="#999799"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="130dp"
                android:background="@null"
                android:gravity="start"
                android:textColor="@color/theme_black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="15dp"
            android:background="#e8e3e8" />

        <RelativeLayout
            android:id="@+id/rlOldPwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/drawer_list_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="旧密码"
                android:textColor="@color/theme_black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etOldPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="130dp"
                android:imeOptions="actionNext"
                android:maxLength="20"
                android:background="@null"
                android:gravity="start"
                android:hint="请填写旧密码"
                android:inputType="textPassword"
                android:textColor="@color/theme_black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="15dp"
            android:background="#e8e3e8" />

        <RelativeLayout
            android:id="@+id/rlNewPwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/drawer_list_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="新密码"
                android:textColor="@color/theme_black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNewPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="130dp"
                android:background="@null"
                android:imeOptions="actionNext"
                android:maxLength="20"
                android:gravity="start"
                android:hint="请填写新密码"
                android:inputType="textPassword"
                android:textColor="@color/theme_black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="15dp"
            android:background="#e8e3e8" />

        <RelativeLayout
            android:id="@+id/rlConfirmPwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/drawer_list_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="确认密码"
                android:textColor="@color/theme_black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etConfirmPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="130dp"
                android:background="@null"
                android:gravity="start"
                android:imeOptions="actionGo"
                android:maxLength="20"
                android:hint="请再次输入新密码"
                android:inputType="textPassword"
                android:textColor="@color/theme_black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnComplete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/common_btn_white_bg"
            android:padding="0dp"
            android:text="完成"
            android:textColor="@color/theme"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>
</ScrollView>
