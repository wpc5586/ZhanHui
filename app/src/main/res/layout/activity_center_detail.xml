<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/tab_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivThum"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_margin="15dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/ivThum"
                android:layout_toRightOf="@+id/ivThum"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvIntro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/ivThum"
                android:layout_toRightOf="@+id/ivThum"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ivThum"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/ivThum"
                android:layout_toRightOf="@+id/ivThum"
                android:text="文件大小："
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvSize"
                android:layout_marginBottom="2.5dp"
                android:layout_toEndOf="@+id/ivThum"
                android:layout_toRightOf="@+id/ivThum"
                android:text="上传时间："
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvTime"
                android:layout_marginBottom="2.5dp"
                android:layout_toEndOf="@+id/ivThum"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/ivThum"
                android:text="公司："
                android:textColor="#666666"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp">

                <Button
                    android:id="@+id/btnRead"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/center_detail_btn_bg"
                    android:padding="0dp"
                    android:text="阅读"
                    android:textColor="@color/theme"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnAttention"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/center_detail_btn_bg"
                    android:padding="0dp"
                    android:text="收藏"
                    android:textColor="@color/theme"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_line"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvIntroText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="详细介绍"
            android:textColor="#3c414e"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tvIntroduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="#666666"
            android:textSize="17sp" />
    </LinearLayout>
</ScrollView>
