<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivAvatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvIntro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text=""
            android:textColor="@color/theme"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/tvInfo"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/trust_detail_btn_bg"
                android:text="接受"
                android:textColor="@color/theme"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/trust_detail_btn_bg"
                android:text="拒绝"
                android:textColor="@color/theme"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/llButton"
            android:layout_marginTop="5dp"
            android:background="@color/gray_line"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_warning" />

        <TextView
            android:id="@+id/tvIntroText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="接受代表您愿意和对方互换电子名片信息，并建立信任关系"
            android:textColor="#3c414e"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/tab_bg" />

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tvDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="#ff9800"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvDate1"
            android:layout_alignRight="@+id/tvDate1"
            android:layout_below="@+id/tvDate1"
            android:layout_marginTop="7dp"
            android:text="09:05"
            android:textColor="#ff9800"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvDate1"
            android:layout_alignRight="@+id/tvDate1"
            android:layout_below="@+id/tvTime1"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="#ff9800"
            android:textSize="13sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvDate2"
            android:layout_alignRight="@+id/tvDate2"
            android:layout_below="@+id/tvDate2"
            android:layout_marginTop="7dp"
            android:text=""
            android:textColor="#ff9800"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvDate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvDate2"
            android:layout_alignRight="@+id/tvDate2"
            android:layout_below="@+id/tvTime2"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="#ff9800"
            android:textSize="13sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvTime3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvDate3"
            android:layout_alignRight="@+id/tvDate3"
            android:layout_below="@+id/tvDate3"
            android:layout_marginTop="7dp"
            android:text=""
            android:textColor="#ff9800"
            android:textSize="10sp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="26.5dp"
            android:layout_toRightOf="@+id/tvDate1"
            android:src="@mipmap/icon_right" />

        <View
            android:layout_width="2px"
            android:layout_height="46dp"
            android:layout_alignLeft="@+id/iv1"
            android:layout_alignStart="@+id/iv1"
            android:layout_below="@+id/iv1"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="-1dp"
            android:background="#bbbbbb" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvDate1"
            android:layout_toRightOf="@+id/iv1"
            android:text="收到信任邀请"
            android:textColor="#ff9800"
            android:textSize="13.5sp" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_below="@+id/iv1"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@+id/tvDate2"
            android:src="@mipmap/icon_right" />

        <View
            android:layout_width="2px"
            android:layout_height="46dp"
            android:layout_alignLeft="@+id/iv2"
            android:layout_alignStart="@+id/iv2"
            android:layout_below="@+id/iv2"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="-1dp"
            android:background="#bbbbbb" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvDate2"
            android:layout_toRightOf="@+id/iv2"
            android:text=""
            android:textColor="#ff9800"
            android:textSize="13.5sp" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_below="@+id/iv2"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@+id/tvDate3"
            android:src="@mipmap/icon_right" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvDate3"
            android:layout_toRightOf="@+id/iv3"
            android:text=""
            android:textColor="#ff9800"
            android:textSize="13.5sp" />
    </RelativeLayout>
</LinearLayout>
